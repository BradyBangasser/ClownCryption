{
  "compilerOptions": {
    "target": "ES2015",                             
    "module": "CommonJS",   
    "lib": ["ES2021"],                    
    "declaration": true,              
    "outDir": "./dist",              
    "removeComments": false,                         
    "declarationDir": "./types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
